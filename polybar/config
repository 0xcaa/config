[module/spotify-prev]
type = custom/script
exec = echo "←"
click-left = spoticontrol -p

[module/spotify-play-pause]
type = custom/script
exec = echo "II"
click-left = spoticontrol -s

[module/spotify-next]
type = custom/script
exec = echo "→"
click-left = spoticontrol -n


